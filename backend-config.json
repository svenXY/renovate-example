{
    "description": "Group Java Dependencies",
    "packageRules": [
        {
            "matchLanguages": ["java"],
            "matchUpdateTypes": ["major"],
            "groupName": "Java dependencies major",
            "addLabels": ["backend", "major"]
        },
        {
            "matchLanguages": ["java"],
            "matchUpdateTypes": ["minor", "patch", "digest"],
            "groupName": "Java dependencies minor-digest",
            "addLabels": ["backend", "non-major"]
        }
    ]
}
